                <dxg:GridControl.View>
                    <dxg:TableView x:Name="view" AutoWidth="True" AllowPrintDetails="True" PrintAllDetails="True" BestFitMode="Smart" AllowBestFit="False" />
                </dxg:GridControl.View>
            </dxg:GridControl>                    
        </ContentControl>
        <StackPanel Orientation="Horizontal" Height="45" HorizontalAlignment="Left" Margin="28,439,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="272">
            <Button Style="{DynamicResource buttonStyle}" Click="PreviewGrid" Width="116" Height="26">
                Exportar Consulta
            </Button>
            <Button Style="{DynamicResource buttonStyle}"  Height="26" Name="button2" Width="93" Click="button2_Click">
                Imprimir
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
